<section class="service-detail-container" *ngIf="(PageData)">

	<!-- SERVICE MEDIA -->
	<section class="row">
		<div class="column">
			<cdf-media [mediaModel]="PageData.MediaModel"></cdf-media>
		</div>
	</section>

	<!--SERVICE TITLE-->
	<section class="row">
		<div class="column">
			<h2 class="service-detail-container__title">{{PageData.Title}}</h2>
		</div>
	</section>

	<!--SERVICE DESCRIPTION-->
	<section class="row">
		<div class="column">
			<p class="service-detail-container__intro" [innerHTML]="PageData.Description"></p>
		</div>
	</section>

	<!--SERVICE BODY-->
	<section class="row">
		<div class="column">
			<span [innerHTML]="PageData.Body"></span>
		</div>
	</section>

	<!--SERVICE TITLE-->
	<section class="row" *ngIf="(PageData.ServicesList.length > 0)">
		<div class="column">
			<h2 class="service-detail-container__title">List of services</h2>
		</div>
	</section>

	<!--SERVICE LIST-->
	<section class="row" *ngFor="let entry of PageData.ServicesList">
		<div class="column">
			<stm-sub-services-detail [subService]="entry"></stm-sub-services-detail>
		</div>
	</section>

</section>
