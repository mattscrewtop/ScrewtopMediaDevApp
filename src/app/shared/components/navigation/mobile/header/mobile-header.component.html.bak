<section class="nav-mobile-container">
	<section class="nav-mobile-container__wrapper">

		<!--SLIDE OUT NAVIGATION-->
		<nav id="menu" class="nav-mobile-container__slideout-menu">
			<header role="logo">
				<h1 class="logo">Screwtop Media</h1>
			</header>

			<stm-nav (NotifyNavItemClicked)="onNotifyNavItemClicked($event)"></stm-nav>
		</nav>

		<!--MOBILE PAGE...-->
		<main id="panel">
			<!--MOBILE HEADER-->
			<header class="text-center" role="banner">

				<section class="row align-center align-middle">

					<!--BUTTON OPEN SLIDE OUT MENU-->
					<div class="column shrink">
						<button (click)="slideout.toggle()" aria-label="Open Menu" class="btn btn--clear">
							<img src="data:image/svg+xml;utf8;base64," />
						</button>
					</div>

					<!--PAGE TITLE-->
					<div class="column text-center">
						<h1 class="nav-mobile-container__title">{{title}}</h1>
					</div>


					<!--STM LOGO-->
					<div class="column shrink">
						<h2 class="logo">Screwtop Media</h2>
					</div>										

				</section>

			</header>

			<!--PAGE CONTENT INJECTED HERE-->
			<ng-content></ng-content>

			<!--FOOTER CONTROL (HAS TO BE WITHIN MAIN TO WORK CORRECTLY WITH SLIDE-OUT MENU-->
			<stm-mobile-footer></stm-mobile-footer>
		</main>

	</section>
</section>